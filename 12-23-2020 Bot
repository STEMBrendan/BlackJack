using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace BlackjackMain
{

  public class Bot
  {
     public int Randomizer ()
    {
    int[] Opponent = {15,16,16,17,17,17,18,18,18,18,19,19,19,19,19,20,20,20,20,20,20,21,21};

    Random rand = new Random();
    int mixer = rand.Next(Opponent.Length);
    int result = Opponent[mixer];

    return result;
    }

  }
}
